modules = ["c"]

[nix]
channel = "stable-24_05"
packages = ["flex", "bison"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JSON2RelCSV Compiler and Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build_and_test"

[[workflows.workflow]]
name = "JSON2RelCSV Compiler and Runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make && ./json2relcsv < tests/complex.json && ls -la *.csv && echo \"CSV files generated successfully!\""

[[workflows.workflow]]
name = "build_and_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
make && echo \"TESTING SIMPLE JSON:\" && ./json2relcsv < tests/simple.json && echo -e \"
Output for simple.json:\" && cat *.csv && echo -e \"

TESTING COMPLEX JSON:\" && ./json2relcsv < tests/complex.json && echo -e \"
Output files for complex.json:\" && ls -la *.csv"""

[deployment]
run = ["sh", "-c", "make && ./json2relcsv < tests/complex.json && ls -la *.csv && echo \"CSV files generated successfully!\""]
